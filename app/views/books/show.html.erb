<div class="container">
  <div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-location-value="<%= @location.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  <div class="card-trip">
    <%= image_tag @book.image_url, alt: @book.title %>
    <div class="card-trip-infos">
      <div>
        <h2><%= @book.title %> by <%= @book.author %></h2>
        <p>Published: <%= @book.published_year %></p>
        <p><%= @description %></p>
        <p><%- @book.published_year %></p>
      </div>
    </div>
  </div>
  <div class="book-offer-cards">
    <% @book_offers.each do |book_offer| %>
      <div class="book-offer-card">
        <div class="book-offer-infos">
          <% if book_offer.photo.attached? %>
            <%= cl_image_tag book_offer.photo.key %>
          <% else %>
            <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
          <% end %>
        </div>
        <div class="d-flex flex-column text-end flex-grow-1 mx-3">
          <div class="book-offer-user">
            <% if book_offer.user.profile_photo.attached? %>
              <%= cl_image_tag book_offer.user.profile_photo.key, class:"card-trip-user avatar-bordered"%>
            <% else %>
              <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg", class="card-trip-user avatar-bordered" />
            <% end %>
          </div>
          <div class="book-offer-button">
            <% if book_offer.availability == true %>
              <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@mdo">Get it</button>
              <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h1 class="modal-title fs-5" id="exampleModalLabel">Take a book out!</h1>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <%= simple_form_for [book_offer, @booking] do |f| %>
                      <div class="modal-body">
                        <%= f.input :starting_date,required: true, label: 'rental time', as: :string, input_html: { data: { controller: "datepicker" } } %>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <%= f.submit :submit, class: "btn btn-success" %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            <% else %>
              <button type="button" class="btn btn-warning">Unavailable</button>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
