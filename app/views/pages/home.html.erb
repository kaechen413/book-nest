<!-- Banner -->
<section class="home-banner" style="padding: 20px; background-image: url('<%= asset_path("BooksBg.png") %>'); background-size: cover; background-position: center; background-repeat: no-repeat; background-color: #FEFAE0;">
  <div style="display: flex; justify-content: space-between; align-items: center;">
    <!-- Logo -->
    <%= image_tag "BookNestLogo.png", alt: "BookNest Logo", style: "height: 80px;" %>
    <!-- Avatar (Login + Label) -->
    <div style="text-align: center;">
      <%= link_to new_user_session_path do %>
        <%= image_tag "Avatar.png", alt: "Login", style: "height: 50px; border-radius: 50%; border: 2px solid #606C38;" %>
      <% end %>
      <small style="display: block; font-size: 12px; color: #606C38;">Login / Sign Up</small>
    </div>
  </div>
  <!-- Search field -->
  <div style="margin-top: 20px;">
    <input type="text" placeholder="Search for a book..."
      style="padding: 12px; border-radius: 10px; border: 2px solid #DDA15E; box-shadow: 2px 2px 6px rgba(0,0,0,0.1); width: 100%; font-size: 16px;">
  </div>
</section>
<!-- Book Cards Section -->
<section style="padding: 20px; padding-bottom: 100px; background-color: #FFEFAE0;">
  <% if @book_offers.present? %>
    <% @book_offers.each do |book| %>
      <%= render partial: "pages/home_page_cards", locals: { book: book } %>
    <% end %>
  <% else %>
    <p>No books found.</p>
  <% end %>
</section>
<!-- Bottom Navigation -->
<footer style="position: fixed; bottom: 0; left: 0; width: 100%; background: #DDA15E; display: flex; justify-content: space-around; padding: 12px 0; box-shadow: 0 -2px 6px rgba(0,0,0,0.1); color: #283618;">
  <div style="text-align: center;">
    <%= link_to "#", style: "color: #283618; text-decoration: none;" do %>
      <i class="fas fa-book" style="font-size: 20px;"></i>
      <p style="margin: 0; font-size: 14px;">My Books</p>
    <% end %>
  </div>
  <div style="text-align: center;">
    <%= link_to "#", style: "color: #283618; text-decoration: none;" do %>
      <i class="fas fa-book-reader" style="font-size: 20px;"></i>
      <p style="margin: 0; font-size: 14px;">Rented</p>
    <% end %>
  </div>
  <div style="text-align: center;">
    <% if user_signed_in? %>
      <%= link_to edit_user_registration_path, style: "color: #283618; text-decoration: none;" do %>
        <i class="fas fa-cog" style="font-size: 20px;"></i>
        <p style="margin: 0; font-size: 14px;">My Settings</p>
      <% end %>
    <% else %>
      <%= link_to new_user_session_path, style: "color: #283618; text-decoration: none;" do %>
        <i class="fas fa-sign-in-alt" style="font-size: 20px;"></i>
        <p style="margin: 0; font-size: 14px;">Login / Sign Up</p>
      <% end %>
    <% end %>
  </div>
</footer>
