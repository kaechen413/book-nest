<footer style="position: fixed; bottom: 0; left: 0; width: 100%; background: #DDA15E; display: flex; justify-content: space-around; padding: 12px 0; box-shadow: 0 -2px 6px rgba(0,0,0,0.1); color: #283618; border-top-left-radius: 12px; border-top-right-radius: 12px;">
  <div style="text-align: center;">
    <%= link_to root_path, style: "color: #283618; text-decoration: none;" do %>
      <i class="fas fa-home" style="font-size: 20px;"></i>
      <p style="margin: 0; font-size: 14px;">Home</p>
    <% end %>
  </div>
  <div style="text-align: center;">
    <%= link_to(owner_bookings_path, style: "color: #283618; text-decoration: none;" ) do %>
      <i class="fas fa-book" style="font-size: 20px;"></i>
      <p style="margin: 0; font-size: 14px;">My Books As a Owner</p>
    <% end %>
  </div>
  <div style="text-align: center;">
    <%= link_to(bookings_path, style: "color: #283618; text-decoration: none;" ) do %>
      <i class="fas fa-book-reader" style="font-size: 20px;"></i>
      <p style="margin: 0; font-size: 14px;">Rented</p>
    <% end %>
  </div>
  <div style="text-align: center;">
    <%= link_to("#", style: "color: #283618; text-decoration: none;" ) do %>
      <i class="fas fa-plus-circle" style="font-size: 20px;"></i>
      <p style="margin: 0; font-size: 14px;">Add Book</p>
    <% end %>
  </div>
</footer>
