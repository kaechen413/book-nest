<!-- Banner -->
<section style="padding: 20px; background-color: #f5f5f5;">
  <div style="display: flex; justify-content: space-between; align-items: center;">
    <div>
      <h1>BookNest</h1>
      <p>Search thousands of boooks...</p>
      <input type="text" placeholder="Search Field" style="padding: 10px; border-radius: 8px; border: 1px solid #ccc; box-shadow: 2px 2px 5px #ccc;">
    </div>
    <div>
      <button style="padding: 10px 20px; border: 1px solid black; background: white;">Log In</button>
    </div>
  </div>
</section>

<!-- Cards -->
<section style="padding: 20px;">
  <% 3.times do %>
    <div style="display: flex; margin-bottom: 20px; border: 1px solid #ddd; border-radius: 10px; box-shadow: 2px 2px 8px #ccc;">
      <div style="flex: 1;">
        <div style="width: 100%; height: 150px; background-color: #ccc; border-top-left-radius: 10px; border-bottom-left-radius: 10px;"></div>
      </div>
      <div style="flex: 2; padding: 15px; position: relative;">
        <h2>Title</h2>
        <p><strong>Author</strong></p>
        <p>Description</p>
        <p style="position: absolute; top: 10px; right: 10px;">Date<br>Location</p>
        <button style="position: absolute; bottom: 10px; right: 10px; background-color: #4CAF50; color: white; border: none; padding: 10px 15px; border-radius: 5px;">Rent me!</button>
      </div>
    </div>
  <% end %>
</section>

